{
  "name": "circuit-breaker",

  "tags": ["resilience", "circuit-breaker"],

  "executions": {

    "java" : {
      "directory" : "${base}/src/main/java/io/vertx/example/circuit/breaker",
      "command" : "java -jar ${jarFile} run io.vertx.example.circuit.breaker.Server -cp ${base}/target/classes:.",
      "client-command" : "java -jar ${jarFile} run io.vertx.example.circuit.breaker.Client  -cp ${base}/target/classes:."
    }
  },

  "post-check": "circuit-breaker-check.groovy",
  "grace-text": "Succeeded in deploying verticle",
  "client-execute-until" : "Result:"
}