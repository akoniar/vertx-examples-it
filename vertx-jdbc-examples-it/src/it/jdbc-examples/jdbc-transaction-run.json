{
  "name": "jdbc-transaction",

  "tags": ["jdbc", "client", "transaction"],

  "libraries": [
    "${dependencies}/postgresql"
  ],

  "executions": {

    "java" : {
      "directory" : "${base}",
      "command" : "java -jar ${jarFile} run io.vertx.example.jdbc.transaction.JDBCExample -cp ${base}/target/classes:."
    }

  },

  "grace-text": "A postgres database has been stopped successfully.",
  "post-check": "jdbc-transaction-check.groovy"
}