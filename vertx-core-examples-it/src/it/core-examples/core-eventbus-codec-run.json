{
  "name": "eventbus-codec",

  "cluster": true,
  "tags": ["eventbus", "core", "codec"],

  "executions": {

    "java" : {
      "directory" : "${base}/target/classes",
      "command" : "java -Djava.net.preferIPv4Stack=true -jar ${jarFile} run io.vertx.example.core.eventbus.messagecodec.Sender -cluster -cluster-host ${interface}",
      "client-command" : "java -Djava.net.preferIPv4Stack=true -jar ${jarFile} run io.vertx.example.core.eventbus.messagecodec.ClusterReceiver -cluster -cluster-host ${interface}",
      "execute-until" : "Message sent from cluster receiver!"
    }
  },

  "post-check": "core-eventbus-codec-check.groovy",
  "grace-text": "Succeeded in deploying verticle"
}