{
  "name": "http",

  "tags": ["http", "https", "simple", "ssl", "core"],

  "executions": {

    "java-http" : {
      "directory" : "${base}/src/main/java/io/vertx/example/core/http/simple",
      "command" : "java -jar ${jarFile} run io.vertx.example.core.http.simple.Server -cp ${base}/target/classes:.",
      "client-command" : "java -jar ${jarFile} run io.vertx.example.core.http.simple.Client -cp ${base}/target/classes:."
    },

    "java-https" : {
      "directory" : "${base}/src/main/js/io/vertx/example/core/http/https",
      "command" : "java -jar ${jarFile} run io.vertx.example.core.http.https.Server -cp ${base}/target/classes:.",
      "client-command" : "java -jar ${jarFile} run io.vertx.example.core.http.https.Client -cp ${base}/target/classes:."
    }
  },

  "post-check": "core-http-check.groovy",
  "grace-text": "Succeeded in deploying verticle",
  "client-execute-until" : "Got data"
}