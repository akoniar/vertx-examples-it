{
  "name": "http-form",

  "tags": ["http", "form", "core"],

  "executions": {

    "java" : {
      "directory" : "${base}/src/main/java/io/vertx/example/core/http/simpleform",
      "command" : "java -jar ${jarFile} run io.vertx.example.core.http.simpleform.SimpleFormServer -cp ${base}/target/classes:.",
      "client-check": "core-http-form-check.groovy"
    },

    "java-upload" : {
      "directory" : "${base}/src/main/java/io/vertx/example/core/http/simpleformupload",
      "command" : "java -jar ${jarFile} run io.vertx.example.core.http.simpleformupload.SimpleFormUploadServer -cp ${base}/target/classes:.",
      "client-check": "core-http-form-upload-check.groovy"
    }
  },

  "grace-text": "Succeeded in deploying verticle"
}