{
  "name": "eventbus-pub-sub",

  "cluster": true,
  "tags": ["eventbus", "core", "pubsub"],

  "executions": {

    "java" : {
      "directory" : "${base}/target/classes",
      "command" : "java -Djava.net.preferIPv4Stack=true -jar ${jarFile} run io.vertx.example.core.eventbus.pubsub.Sender -cluster -cluster-host ${interface}",
      "client-command" : "java -Djava.net.preferIPv4Stack=true -jar ${jarFile} run io.vertx.example.core.eventbus.pubsub.Receiver -cluster -cluster-host ${interface}"
    }
  },

  "client-execute-until" : "Received news on consumer 3",
  "post-check": "core-eventbus-pubsub-check.groovy",
  "grace-text": "Succeeded in deploying verticle"
}