{
  "name": "ha",

  "cluster": true,
  "tags": ["ha", "core"],
  "executions": {
    "java" : {
      "directory" : "${base}/target/classes",
      "command" : "java -Djava.net.preferIPv4Stack=true -jar ${jarFile} run io.vertx.example.core.ha.Server -ha -cluster-host ${interface}"
    },

    "bare" : {
      "directory" : "${base}/target/classes",
      "command" : "java -Djava.net.preferIPv4Stack=true -jar ${jarFile} -ha -cluster-host ${interface}",
      "grace-text" : "A quorum has been obtained.",
      "client-check": "core-ha-bare-check.groovy"
    }
  },

  "client-check": "core-ha-check.groovy",
  "grace-text": "Succeeded in deploying verticle"
}