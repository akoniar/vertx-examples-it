{
  "name": "eventbus-point-to-point",

  "cluster": true,
  "tags": ["eventbus", "core", "point"],

  "executions": {

    "java" : {
      "directory" : "${base}/target/classes",
      "command" : "java -Djava.net.preferIPv4Stack=true -jar ${jarFile} run io.vertx.example.core.eventbus.pointtopoint.Sender -cluster -cluster-host ${interface}",
      "client-command" : "java -Djava.net.preferIPv4Stack=true -jar ${jarFile} run io.vertx.example.core.eventbus.pointtopoint.Receiver -cluster -cluster-host ${interface}",
      "execute-until" : "pong"
    }
  },

  "post-check": "core-eventbus-pointtopoint-check.groovy",
  "grace-text": "Succeeded in deploying verticle"
}