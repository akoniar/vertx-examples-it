{
  "name": "net-echo",

  "tags": ["net", "echo", "core"],

  "executions": {

    "java" : {
      "directory" : "${base}/target/classes",
      "command" : "java -jar ${jarFile} run io.vertx.example.core.net.echo.Server",
      "client-command" : "java -jar ${jarFile} run io.vertx.example.core.net.echo.Client"
    }
  },

  "post-check": "core-net-echo-check.groovy",
  "grace-text": "Succeeded in deploying verticle",
  "client-execute-until" : "client receiving"
}