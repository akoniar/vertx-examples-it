{
  "name": "http-upload",

  "tags": ["http", "upload", "core"],

  "executions": {

    "java" : {
      "directory" : "${base}/src/main/java/io/vertx/example/core/http/upload",
      "command" : "java -jar ${jarFile} run io.vertx.example.core.http.upload.Server -cp ${base}/target/classes:.",
      "client-command" : "java -jar ${jarFile} run io.vertx.example.core.http.upload.Client -cp ${base}/target/classes:."
    }
  },

  "post-check": "core-http-upload-check.groovy",
  "grace-text": "Succeeded in deploying verticle",
  "client-execute-until" : "Response"
}