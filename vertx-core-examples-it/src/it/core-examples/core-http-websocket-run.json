{
  "name": "http-websocket",

  "tags": ["http", "websocket", "core"],

  "executions": {

    "java" : {
      "directory" : "${base}/src/main/java/io/vertx/example/core/http/websockets",
      "command" : "java -jar ${jarFile} run io.vertx.example.core.http.websockets.Server -cp ${base}/target/classes:.",
      "client-command" : "java -jar ${jarFile} run io.vertx.example.core.http.websockets.Client -cp ${base}/target/classes:."
    }
  },

  "post-check": "core-http-websocket-check.groovy",
  "grace-text": "Succeeded in deploying verticle",
  "client-execute-until" : "Received data"
}